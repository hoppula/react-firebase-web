{
  "name": "react-firebase-web",
  "version": "1.0.0",
  "description": "Firebase components for React",
  "keywords": [
    "react",
    "reactjs",
    "firebase",
    "firestore"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hoppula/react-firebase-web"
  },
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "jest",
    "clean": "rimraf lib",
    "prepublish": "npm run clean && npm run build"
  },
  "author": "Lari Hoppula",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/react-test-renderer": "^16.0.2",
    "@types/prop-types": "^15.5.5",
    "firebase-mock": "^2.2.6",
    "jest": "^23.5.0",
    "prettier": "^1.14.2",
    "react": "^16.4.2",
    "react-test-renderer": "^16.4.2",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.1.4",
    "typescript": "^3.0.3"
  },
  "dependencies": {
    "@types/lodash.findindex": "^4.6.4",
    "@types/react": "^16.4.13",
    "@types/react-dom": "^16.0.7",
    "firebase": "^5.4.2",
    "lodash.findindex": "^4.6.0",
    "prop-types": "^15.6.2"
  },
  "peerDependencies": {
    "react": ">= 16.3.0 < 17.0.0-0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "roots": [
      "<rootDir>/src"
    ]
  }
}
